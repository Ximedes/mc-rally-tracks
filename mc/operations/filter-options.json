{
  "name": "filter-options",
  "operation-type": "search",
  "index": "{{ wheretosearch|default(mc-rally-trx) }}",
  "body":{
    "size":0,
    "query":{
      "bool" : {
        "filter" : [
          {
            "terms" : {
              "location.id" : {
                "index" : "mc-hierarchies",
                "type" : "hierarchy",
                "id" : "{{ division_id }}",
                "path" : "locationIDs"
              },
              "boost" : 1.0
            }
          }
        ],
        "disable_coord" : false,
        "adjust_pure_negative" : true,
        "boost" : 1.0
      }
    }, "aggs":{
      "OUTER" : {
        "terms" : {
          "field" : "channel",
          "size" : 10,
          "min_doc_count" : 1,
          "shard_min_doc_count" : 0,
          "show_term_doc_count_error" : false,
          "order" : [
            {
              "_count" : "desc"
            },
            {
              "_term" : "asc"
            }
          ]
        },
        "aggregations" : {
          "INNER" : {
            "terms" : {
              "field" : "paymentMethod",
              "size" : 10,
              "min_doc_count" : 1,
              "shard_min_doc_count" : 0,
              "show_term_doc_count_error" : false,
              "order" : [
                {
                  "_count" : "desc"
                },
                {
                  "_term" : "asc"
                }
              ]
            }
          }
        }
      }
    }
  }
}
