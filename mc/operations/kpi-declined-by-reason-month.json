{
  "name": "kpi-declined-by-reason-month",
  "description": "This is the same query as for kpi-statistics-declines, but for a diffent (longer) time period (1 month).",
  "operation-type": "search",
  "index": "mc-rally-trx",
  "body":{
    "size":0,
    "query":{
      "bool" : {
        "filter" : [
          {
            "terms" : {
              "status" : [
                "DECLINED"
              ],
              "boost" : 1.0
            }
          },
          {
            "exists" : {
              "field" : "resultCode",
              "boost" : 1.0
            }
          },
          {
            "range" : {
              "transactionDate" : {
                "from" : "2018-06-17T00:00:00+02:00",
                "to" : "2018-07-17T00:00:00+02:00",
                "include_lower" : true,
                "include_upper" : false,
                "format" : "yyyy-MM-dd'T'HH:mm:ssZZ",
                "boost" : 1.0
              }
            }
          },
          {
            "terms" : {
              "location.id" : {
                "index" : "mc-hierarchies",
                "type" : "hierarchy",
                "id" : "{{ division_id }}",
                "path" : "locationIDs"
              },
              "boost" : 1.0
            }
          }
        ],
        "disable_coord" : false,
        "adjust_pure_negative" : true,
        "boost" : 1.0
      }
    }, "aggs":{
      "AGGREGATION_KEY_1" : {
        "terms" : {
          "field" : "resultCode",
          "size" : 10000,
          "min_doc_count" : 1,
          "shard_min_doc_count" : 0,
          "show_term_doc_count_error" : false,
          "order" : [
            {
              "_count" : "desc"
            },
            {
              "_term" : "asc"
            }
          ]
        },
        "aggregations" : {
          "SUM" : {
            "sum" : {
              "field" : "transactionAmount"
            }
          }
        }
      }
    }
  }
}
